<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis productos</title>

    <link rel="stylesheet" href="/css/font-awesome.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="/index.html">Lematex</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="/profile">PERFIL </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/productos">PRODUCTOS </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/myproducts">MIS PRODUCTOS<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">COMO FUNCIONA</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      OPCIONES
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/editar/profile/<%= usuario._id %>">EDITAR PERFIL</a>
                        <a class="dropdown-item" href="/logout">LOGOUT</a>
                        <div class="dropdown-divider"></div>
                        <% if( usuario.role == 'ADMIN_ROLE' ) { %>
                            <a class="dropdown-item " href="/admin/admin_user">USUARIOS </a>
                            <% } %>

                    </div>
                </li>
            </ul>
        </div>
    </nav>


    <br>
    <div class="container bg-light">
        <div class="row">
            <div class="col">
                <form class="form-inline my-2 my-lg-0" method="GET" action="/myproducts/buscar">
                    <input class="form-control col-10" type="search" name="busquedaM" placeholder="Buscar ..." aria-label="Search">

                    <button class="btn btn-secondary  col-1" type="submit"><span class="fa fa-search"></span></button>
                    <a href="/addprod" class="btn btn-secondary  col-1"><span class="fa fa-plus"></span></a>

                </form>
            </div>
        </div>

    </div>














    <br/>
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                <% for(var i=0; i < productos.length; i++) { %>
                    <% if( usuarioT == JSON.stringify(productos[i].usuario._id) ) { %>
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <% if( productos[i].image === null ) { %>
                                    <img class="card-img-top" src="/images/no-image.png" style="height: 195px; width: 100%; display: block;" data-holder-rendered="true">
                                    <% } else{ %>
                                        <img class="card-img-top" src="https://imageuploadcv.s3.us-east-2.amazonaws.com/<%= productos[i].ruta %>" style="height: 195px; width: 100%; display: block;" data-holder-rendered="true">
                                        <% } %>

                                            <div class="card-body">
                                                <p class="card-text">
                                                    <%= productos[i].nombre %>
                                                </p>
                                                <p class="card-text">
                                                    Cambio a
                                                    <%= productos[i].color %>
                                                </p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="btn-group">
                                                        <a href="/producto/detalles/<%= productos[i]._id %>" class="btn btn-sm btn-outline-secondary">Ver Detalles</a>
                                                    </div>
                                                    <small class="text-muted"><%= productos[i].CreateAt %></small>
                                                </div>
                                            </div>
                            </div>
                        </div>
                        <% } %>
                            <% } %>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>

</html>