    <form>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">precio</th>
                </tr>
            </thead>


            <tbody>
                <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                        <td>
                            <%= i + 1%>
                        </td>
                        <td><strong><%= data[i].nombre %></strong></td>
                        <td>
                            <%= data[i].descripcion %>
                        </td>
                        <td>
                            <%= data[i].precio %>
                        </td>
                        <td>
                            <a href="/producto/edit/<%= data[i]._id %>" class="btn btn-danger">Editar</a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>

        </table>
    </form>
</body>

